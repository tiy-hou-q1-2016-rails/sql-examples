<h1>New Role</h1>

<% if @role.errors.any? %>
  <div class="errors">
    <strong><%= pluralize @role.errors.count, 'error' %> stopped you from getting your job done</strong>
    <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<%= form_for @role do |f| %>
  <div class="">
    <%= f.label :movie %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title, prompt: true %>
  </div>
  <div class="">
    <%= f.label :actor %>
    <%= f.collection_select :actor_id, Actor.all, :id, :full_name, prompt: true %>
  </div>
  <div class="">
    <%= f.submit %>
  </div>
<% end %>
