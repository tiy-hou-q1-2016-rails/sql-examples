<h1>Roles</h1>

<p>
  <%= link_to 'New Role', new_role_path %>
</p>

<table>
  <thead>
    <tr>
      <th>
        Movie
      </th>
      <th>
        Actor
      </th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td>
          <%= role.movie.title %>
        </td>
        <td>
          <%= role.actor.full_name %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
