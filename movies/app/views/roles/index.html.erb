<h1>Roles</h1>

<p class="text-right">
  <%= link_to 'New Role', new_role_path, class: 'btn btn-default' %>
</p>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>
        Movie
      </th>
      <th>
        Actor
      </th>
      <th>
        Character
      </th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td>
          <%= role.movie.title %>
        </td>
        <td>
          <%= role.actor.full_name %>
        </td>
        <td>
          <%= role.character %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
